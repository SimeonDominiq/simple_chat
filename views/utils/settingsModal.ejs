<div class="modal" id="settingsModal">
    <div class="modal-dialog">
    <header class="modal-header">
        <h6>Settings</h6>
        <button class="close-modal" aria-label="close modal" data-close>âœ•</button>
    </header>
    <section class="modal-content">
        <div class="form-group">
            <label>Clock display</label>
            <div class="custom_radio__input d-flex align-items-center">
                <div>
                    <label class="radio">
                        <span class="radio__input">
                          <input type="radio" value="12" name="clockDisplay">
                          <span class="radio__control"></span>
                        </span>
                        <span class="radio__label">12 Hours</span>
                    </label>
                </div>

                <div>
                    <label class="radio">
                        <span class="radio__input">
                          <input type="radio" value="24" name="clockDisplay">
                          <span class="radio__control"></span>
                        </span>
                        <span class="radio__label">24 Hours</span>
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label>Send messages on Ctrl/CMD + Enter</label>
            <div class="custom_radio__input d-flex align-items-center">
                <div>
                    <label class="radio">
                        <span class="radio__input">
                          <input type="radio" value="on" name="onEnterSend">
                          <span class="radio__control"></span>
                        </span>
                        <span class="radio__label">On</span>
                    </label>
                </div>

                <div>
                    <label class="radio">
                        <span class="radio__input">
                          <input type="radio" value="off" name="onEnterSend">
                          <span class="radio__control"></span>
                        </span>
                        <span class="radio__label">Off</span>
                    </label>
                </div>
            </div>
        </div>
    </section>

    <footer class="modal-footer">
        <button type="button" class="reset_btn">Reset to default</button>
    </footer>
    </div>
</div>